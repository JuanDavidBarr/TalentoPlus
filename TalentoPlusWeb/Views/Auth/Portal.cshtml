@model TalentoPlusWeb.Models.Employee

@{
    ViewData["Title"] = "Mi Portal";
    var employeeName = Context.Session.GetString("EmployeeName");
}

<div class="row">
    <div class="col-12">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-person-badge"></i> Bienvenido, @Model.FirstName
            </h1>
            <form asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </button>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <!-- Tarjeta de información personal -->
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-person"></i> Mi Información</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt>Nombre Completo</dt>
                            <dd>@Model.FirstName @Model.LastName</dd>

                            <dt>Documento</dt>
                            <dd>@Model.DocumentNumber</dd>

                            <dt>Correo Electrónico</dt>
                            <dd>@Model.Email</dd>

                            <dt>Teléfono</dt>
                            <dd>@(Model.Phone ?? "No registrado")</dd>

                            <dt>Dirección</dt>
                            <dd>@(Model.Address ?? "No registrada")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt>Fecha de Nacimiento</dt>
                            <dd>@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

                            <dt>Fecha de Contratación</dt>
                            <dd>@Model.HireDate.ToString("dd/MM/yyyy")</dd>

                            <dt>Estado</dt>
                            <dd>
                                @if (Model.Status == "Activo")
                                {
                                    <span class="badge bg-success">@Model.Status</span>
                                }
                                else if (Model.Status == "Pendiente")
                                {
                                    <span class="badge bg-warning text-dark">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </dd>

                            <dt>Departamento</dt>
                            <dd>@(Model.DepartmentName ?? "No asignado")</dd>

                            <dt>Cargo</dt>
                            <dd>@(Model.PositionName ?? "No asignado")</dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ProfessionalProfile))
                {
                    <hr />
                    <h6>Perfil Profesional</h6>
                    <p class="text-muted">@Model.ProfessionalProfile</p>
                }
            </div>
        </div>
    </div>

    <!-- Tarjeta de acciones -->
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Acciones Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a asp-action="DownloadMyResume" class="btn btn-danger btn-lg">
                        <i class="bi bi-file-pdf"></i> Descargar Mi Hoja de Vida
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Información</h5>
            </div>
            <div class="card-body">
                <p class="small text-muted">
                    <strong>Nota:</strong> Si necesitas actualizar tu información, 
                    contacta al departamento de Recursos Humanos.
                </p>
                <p class="small text-muted mb-0">
                    <strong>Nivel Educativo:</strong> @(Model.EducationLevel ?? "No especificado")
                </p>
            </div>
        </div>
    </div>
</div>